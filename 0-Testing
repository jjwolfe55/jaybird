CREATE TABLE fangraphs_lines_games_intake_pitching_home_day (
f_game_date VARCHAR(12),
f_team_id CHAR(3),
f_player_count SMALLINT,
f_tbf SMALLINT,
f_era DECIMAL(4,2),
f_h SMALLINT,
f_d SMALLINT,
f_t SMALLINT,
f_r SMALLINT,
f_er SMALLINT,
f_hr SMALLINT,
f_bb SMALLINT,
f_ibb SMALLINT,
f_hbp SMALLINT,
f_so SMALLINT,
f_avg DECIMAL(4,3),
f_obp DECIMAL(4,3),
f_slg DECIMAL(4,3),
f_w_oba DECIMAL(4,3),
PRIMARY KEY (f_game_date,f_team_id,f_tbf,f_r)
);

