CREATE TABLE fangraphs_lines_player_crosswalk (
player_id VARCHAR(45),
player_name VARCHAR(45),
fan_player_id VARCHAR(9),
fan_player_name_v1 VARCHAR(45),
combo_player_id VARCHAR(20),
PRIMARY KEY (player_id)
);

CREATE TABLE fangraphs_lines_batting (
fan_player_name_v1 VARCHAR(45),
fan_team_id VARCHAR(3),
fan_season_id SMALLINT,
fan_age SMALLINT,
fan_b_g SMALLINT,
fan_b_pa SMALLINT,
fan_b_ab SMALLINT,
fan_b_r SMALLINT,
fan_b_h SMALLINT,
fan_b_s SMALLINT,
fan_b_d SMALLINT,
fan_b_t SMALLINT,
fan_b_hr SMALLINT,
fan_b_rbi SMALLINT,
fan_b_sh SMALLINT,
fan_b_sf SMALLINT,
fan_b_hbp SMALLINT,
fan_b_bb SMALLINT,
fan_b_ibb SMALLINT,
fan_b_so SMALLINT,
fan_b_sb SMALLINT,
fan_b_cs SMALLINT,
fan_b_gdp SMALLINT,
fan_player_name_v2 VARCHAR(45),
fan_player_id VARCHAR(9),
mlbamid VARCHAR(9),
PRIMARY KEY (fan_player_name_v2,fan_team_id,fan_season_id)
);

CREATE TABLE fangraphs_lines_pitching_v1 (
fan_player_name_v1 VARCHAR(45),
fan_team_id VARCHAR(3),
fan_season_id SMALLINT,
fan_age SMALLINT,
fan_p_g SMALLINT,
fan_p_gs SMALLINT,
fan_p_cg SMALLINT,
fan_p_ip DECIMAL(6,1),
fan_p_bf SMALLINT,
fan_p_h SMALLINT,
fan_p_r SMALLINT,
fan_p_er SMALLINT,
fan_p_bb SMALLINT,
fan_p_ibb SMALLINT,
fan_p_so SMALLINT,
fan_p_hbp SMALLINT,
fan_p_bk SMALLINT,
fan_p_wp SMALLINT,
fan_p_wins SMALLINT,
fan_p_losses SMALLINT,
fan_p_saves SMALLINT,
fan_player_name_v2 VARCHAR(45),
fan_player_id VARCHAR(9),
mlbamid VARCHAR(9),
PRIMARY KEY (fan_player_name_v2,fan_team_id,fan_season_id)
);

CREATE TABLE fangraphs_lines_pitching_v2 (
fan_season_id SMALLINT,
fan_player_name_v1 VARCHAR(45),
fan_team_id VARCHAR(3),
fan_p_g SMALLINT,
fan_p_bf SMALLINT,
fan_p_era DECIMAL (6,2),
fan_p_h SMALLINT,
fan_p_d SMALLINT,
fan_p_t SMALLINT,
fan_p_r SMALLINT,
fan_p_er SMALLINT,
fan_p_hr SMALLINT,
fan_p_bb SMALLINT,
fan_p_ibb SMALLINT,
fan_p_hbp SMALLINT,
fan_p_so SMALLINT,
fan_p_avg DECIMAL(4,3),
fan_p_obp DECIMAL(4,3),
fan_p_slg DECIMAL (4,3),
fan_p_woba DECIMAL (4,3),
fan_player_id VARCHAR(9),
PRIMARY KEY (fan_player_id,fan_team_id,fan_season_id)
);


CREATE TABLE fangraphs_lines_fielding (
fan_player_name_v1 VARCHAR(45),
fan_team_id VARCHAR(3),
fan_d_pos VARCHAR(2),
fan_season_id SMALLINT,
fan_d_g SMALLINT,
fan_d_gs SMALLINT,
fan_d_inn DECIMAL(6,1),
fan_d_po SMALLINT,
fan_d_a SMALLINT, 
fan_d_e SMALLINT,
fan_d_dp SMALLINT,
fan_d_pb SMALLINT,       
fan_d_wp SMALLINT,         
fan_d_sb SMALLINT,            
fan_d_cs SMALLINT, 
fan_player_name_v2 VARCHAR(45),
fan_player_id VARCHAR(9),
mlbamid VARCHAR(9),            
PRIMARY KEY (fan_player_name_v2,fan_team_id,fan_season_id,fan_d_pos)
);
